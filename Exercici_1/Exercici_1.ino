 //******  Includes  ******************************************************


 //******  Variables  *****************************************************
 const int led = 9;        
 const int ldr = A0;
 int Valor;
 //******  Setup  *********************************************************
 void setup () {
  pinMode(led, OUTPUT);
 }


 //******  Loop  **********************************************************
 void loop () {
 Valor = analogRead(ldr);
 Valor = map(Valor, 0, 1023, 0, 255);
 analogWrite(led, Valor);
 }
